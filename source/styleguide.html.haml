    .sg-content.no-gutter
      %div
        %section#get-started
          .section-content.margin-auto.paxl.mdl-color--white
            %h3 Get Started
            %a.btn.btn-highlight.btn-lg{:href => "https://github.com/elliotdahl/8-gauge-styleguide-old", :target => "_blank"} View Repo
            %p.mtm.mbn Version: 0.1
        %section#buttons
          .section-content.margin-auto.paxl.mdl-color--white
            %h2.section-header Buttons
            %p
              Four different button colors and their alt variations. The base
              %code .btn
              is the default ghost. You can modify it's color with a class.

            .section-format.mbxl
              .mbxl
                %button.btn.btn-default
                  %span Default
                %button.btn.btn-default-alt Default Alt
                %button.btn Flat

              .mbxl
                %button.btn.btn-highlight Highlight
                %button.btn.btn-highlight-alt Highlight Alt
                %button.btn.btn-highlight-flat Flat

              .mbxl
                %button.btn.btn-positive Positive
                %button.btn.btn-positive-alt Positive Alt
                %button.btn.btn-positive-flat Flat
              %div
                %button.btn.btn-negative Negative
                %button.btn.btn-negative-alt Negative Alt
                %button.btn.btn-negative-flat Flat


            %h4 Disabled

            .section-format.mbxl
              .mbxl
                %button.btn.btn-default.disabled{:disabled => ""} Default
                %button.btn.btn-default-alt.disabled{:disabled => ""} Default Alt
                %button.btn.disabled{:disabled => ""} Flat
              .mbxl
                %button.btn.btn-highlight.disabled{:disabled => ""} Highlight
                %button.btn.btn-highlight-alt.disabled{:disabled => ""} Highlight Alt
                %button.btn.btn-highlight-flat.disabled{:disabled => ""} Flat

              .mbxl
                %button.btn.btn-positive.disabled{:disabled => ""} Positive
                %button.btn.btn-positive-alt.disabled{:disabled => ""} Positive Alt
                %button.btn.btn-positive-flat.disabled{:disabled => ""} Flat
              %div
                %button.btn.btn-negative.disabled{:disabled => ""} Negative
                %button.btn.btn-negative-alt.disabled{:disabled => ""} Negative Alt
                %button.btn.btn-negative-flat.disabled{:disabled => ""} Flat
            %h4 Icon Buttons
            .section-format.mbxl
              %div
                %button.btn.btn-default

                  .icon
                    =partial 'images/svg-lib/add.svg'
                  %span
                    default
                %button.btn.btn-default.btn-icon
                  .icon
                    =partial 'images/svg-lib/autorenew.svg'
                %button.btn.btn-positive.btn-icon.btn-sm
                  .icon
                    =partial 'images/svg-lib/add.svg'
                %button.btn.btn-default-alt.btn-icon
                  .icon
                    =partial 'images/svg-lib/add.svg'
                %button.btn.btn-highlight.btn-icon.btn-lg
                  .icon
                    =partial 'images/svg-lib/add.svg'



            %h4 Button Loaders
            .section-format.mbxl

              .mbxl
                %button.btn.btn-default
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  %span
                    Loading

                %button.btn.btn-default-alt
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading

              .mbxl
                %button.btn.btn-highlight
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading
                %button.btn.btn-highlight-alt
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading
              .mbxl
                %button.btn.btn-positive
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading
                %button.btn.btn-positive-alt
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading
              %div
                %button.btn.btn-negative
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading
                %button.btn.btn-negative-alt
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading
            %h4 Sizes
            .section-format.mbxl
              .mbxl
                %button.btn.btn-default.btn-sm
                  %div small
                %button.btn.btn-default default
                %button.btn.btn-default.btn-lg
                  %div large
              .mbxl
                %button.btn.btn-default.btn-sm
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Small Load
                %button.btn.btn-default
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Loading
                %button.btn.btn-default.btn-lg
                  .icon.spinner-sm
                    =partial 'images/loading/spinner.svg'
                  Large Load
              %div
